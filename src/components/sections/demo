import { useState, useEffect } from "react";
import { FiChevronDown, FiMenu, FiX } from "react-icons/fi";
import logoBlack from "../../assets/logo-black.png";
import logoWhite from "../../assets/logo-white.png";

const Navbar = () => {
  const [navbarBg, setNavbarBg] = useState(false);
  const [isMobileMenuOpen, setIsMobileMenuOpen] = useState(false);
  const [isMobileServicesOpen, setIsMobileServicesOpen] = useState(false);

  const handleScroll = () => {
    if (window.scrollY > 50) {
      setNavbarBg(true);
    } else {
      setNavbarBg(false);
    }
  };

  useEffect(() => {
    window.addEventListener("scroll", handleScroll);
    return () => {
      window.removeEventListener("scroll", handleScroll);
    };
  }, []);

  const menuItems = [
    { name: "Services", href: "#services", isDropdown: true },
    { name: "About", href: "#about" },
    { name: "Contact", href: "#contact" },
  ];

  const servicesList = [
    { name: "Kitchen", href: "/service/kitchen" },
    { name: "Livingroom", href: "/service/livingroom" },
    { name: "Bedroom", href: "/service/bedroom" },
    { name: "Cabinetry", href: "/service/cabinetry" },
  ];

  const toggleMobileMenu = () => {
    setIsMobileMenuOpen(!isMobileMenuOpen);
  };

  const toggleMobileServicesDropdown = () => {
    setIsMobileServicesOpen(!isMobileServicesOpen);
  };

  return (
    <nav
      className={`fixed top-0 w-full z-50 transition-all duration-300 font-robotoCondensed ${
        navbarBg
          ? "bg-white shadow-md text-black"
          : "text-white bg-gradient-to-b from-black/80 via-transparent/55 to-transparent"
      }`}
    >
      <div className="container mx-auto px-5 md:px-20 py-4 flex justify-between items-center">
        {/* Logo */}
        <a href="/" className="w-32 md:w-40">
          <img src={navbarBg ? logoBlack : logoWhite} alt="Logo" />
        </a>

        {/* Get a Quote Button and Hamburger Icon */}
        <div className="flex items-center">
          <button className="hidden lg:block bg-primary text-white text-[18px] px-7 py-2.5 rounded-sm hover:opacity-90 font-robotoCondensed">
            Get a Quote
          </button>

          {/* Show hamburger icon on small (sm) and medium (md) screens */}
          <button
            onClick={toggleMobileMenu}
            className="text-white ml-4 lg:hidden" // Only show the Hamburger up to large screens (hidden on `lg`)
          >
            {isMobileMenuOpen ? <FiX size={30} /> : <FiMenu size={30} />}
          </button>
        </div>
      </div>

      {/* Mobile Menu - Visible on small and medium screens */}
      {isMobileMenuOpen && (
        <div className="md:hidden bg-white w-full text-black flex flex-col items-start space-y-4 py-5 uppercase font-robotoCondensed">
          {menuItems.map((item, index) => (
            <div key={index} className="text-[18px]">
              <a
                href={item.href}
                onClick={
                  item.isDropdown ? toggleMobileServicesDropdown : toggleMobileMenu
                }
                className="block px-4 py-2"
              >
                {item.name}
                {item.isDropdown && <FiChevronDown className="ml-1 inline" />}
              </a>

              {/* Services Dropdown in Mobile */}
              {item.isDropdown && isMobileServicesOpen && (
                <div className="flex flex-col px-4 space-y-3 font-robotoCondensed uppercase">
                  {servicesList.map((service, idx) => (
                    <a
                      key={idx}
                      href={service.href}
                      className="text-[16px] pl-4"
                      onClick={toggleMobileMenu}
                    >
                      {service.name}
                    </a>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
      )}
    </nav>
  );
};

export default Navbar;
